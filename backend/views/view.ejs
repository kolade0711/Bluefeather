<%- include("partials/header.ejs") %>
  <div class="post mb-2">
    <div class="post-block">
        <h2><%= post.title %></h2>
        <p><%= post.content %></p>
    </div>

      <div class="row">
        <div class="col-lg-1 col-sm-12 my-2">
          <a href="/posts/<%= post.id %>/edit"><button id="edit">Edit</button></a>
        </div>
        
        <div class="col-lg-1 col-sm-12 my-2">
          <form action="/posts/<%= post.id %>/delete" method="POST" style="display:inline;">
            <button type="submit" id="delete">Delete</button>
          </form>
        </div>

        <div class="col-lg-8 col-sm-12 pt-2"><a href="/posts">‚Üê Back to all posts</a></div>
      </div>
      
  </div>
  
